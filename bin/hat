# Hat is cat for human.

status=0

for f in $*; do
	# Skip if file don't exists.
	if [[ ! -f $f ]]; then
		echo hat: $f: No such file or directory
		status=1
		continue
	fi

	# Prints ------------------------------------
	for i in $(seq $(tput cols | tr -d '\n')); do
		printf '-'
	done
	echo

	echo FILE: $f

	# Prints ------------------------------------
	for i in $(seq $(tput cols | tr -d '\n')); do
		printf '-'
	done
	echo

	awk '{ printf "%6d\t%s\n", NR, $0 }' $f
done

exit $status
